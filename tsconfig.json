{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"],
      "@data/*": ["resources/js/data/*"]
    },

    "types": ["vite/client", "node"],
    "allowJs": true,
    "checkJs": false,

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": [
    "resources/js",
    "resources/**/*.ts",
    "resources/**/*.tsx",
    "env.d.ts"
  ]
}
